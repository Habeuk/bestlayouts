{% if content %}
<header {{ attributes.addClass('hbk-dynamiques-headers') }}>
	<div class="top-header">
		<div {% if settings.config_section %} class="{{ settings.config_section.type_container }} {{ settings.config_section.container_class }}" {% else %} class="container" {% endif %}>
			<div class="row">
				{% if content.header_top_left|has_value %}
				<div
					{{ region_attributes.header_top_left.addClass('header_top_left') }}>
					{{ content.header_top_left }}
				</div>
				{% endif %}
				{% if content.header_top_center|has_value %}
				<div
					{{ region_attributes.header_top_center.addClass('header_top_center') }}>
					{{ content.header_top_center }}
				</div>
				{% endif %}
				{% if content.header_top_right|has_value %}
				<div {{ region_attributes.header_top_right.addClass('header_top_right') }}>
					{{ content.header_top_right }}
				</div>
				{% endif %}
			</div>
		</div>
	</div>
	{#
		La structure des menus est fortement liée de la derivée.
	#}	
	{% if settings.derivate.value == "style-merseille" %}
		<div {% if settings.config_section %} class="hbk-mega-menu {{ settings.derivate.value }} {{ settings.config_section.type_container }} {{ settings.config_section.container_class }}" {% else %} class="container" {% endif %}>
			{% if content.logo|has_value %}
    			<div {{ region_attributes.logo.addClass('logo','block-logo') }}>
    				{{ content.logo }}
    			</div>
			{% endif %}
			{% if content.menu.layout_builder_add_block %}
				<div {{ region_attributes.menu }}>
					{{ content.menu }}
				</div>
			{% else  %}			
    			{{ content.menu }}
			{% endif %}
			{% if content.right_menu|has_value %}
    			<div {{ region_attributes.right_menu.addClass('right_menu') }}>
    				{{ content.right_menu|layout_value }}
    			</div>
			{% endif %}
					<div class="hbk-mega-menu--burgers">
                 	 <!--region burger button-->
                  	  <button class="burger__button" aria-label="Main Menu">
                        <svg width="100%" height="100%" viewBox="0 0 100 100">
                          <path
                            class="line line1"
                            d="M 20,29.000046 H 80.000231 C 80.000231,29.000046 94.498839,28.817352 94.532987,66.711331 94.543142,77.980673 90.966081,81.670246 85.259173,81.668997 79.552261,81.667751 75.000211,74.999942 75.000211,74.999942 L 25.000021,25.000058"
                          />
                          <path class="line line2" d="M 20,50 H 80" />
                          <path
                            class="line line3"
                            d="M 20,70.999954 H 80.000231 C 80.000231,70.999954 94.498839,71.182648 94.532987,33.288669 94.543142,22.019327 90.966081,18.329754 85.259173,18.331003 79.552261,18.332249 75.000211,25.000058 75.000211,25.000058 L 25.000021,74.999942"
                          />
                        </svg>
                      </button>
                
                      <div class="burger__right">
                        <svg
                          class="hbk--icon-search"
                          fill="#000000"
                          width="2.5rem"
                          height="2.5rem"
                          viewBox="0 0 50 50"
                          version="1.2"
                          baseProfile="tiny"
                          xmlns="http://www.w3.org/2000/svg"
                          overflow="inherit"
                        >
                          <path
                            d="M35.66 29.539c1.661-2.739 2.632-5.948 2.632-9.385 0-10.029-8.115-18.15-18.146-18.154-10.022.003-18.146 8.125-18.146 18.152 0 10.018 8.125 18.139 18.152 18.139 3.44 0 6.645-.972 9.384-2.633l12.343 12.342 6.121-6.124-12.34-12.337zm-15.51 1.841c-6.202-.015-11.216-5.027-11.227-11.216.012-6.202 5.027-11.215 11.227-11.229 6.199.016 11.215 5.028 11.228 11.229-.013 6.182-5.031 11.201-11.228 11.216z"
                          />
                        </svg>
                        {% if content.search.layout_builder_add_block %}
                        	{{ content.search }}
                        {% endif %}
                          {% if content.search|has_value %}
            				<div {{ region_attributes.search.addClass(['search','block-form-search']) }}> {{ content.search }} </div>
            			 {% endif %}
                      </div>
                	</div>
		</div>
	{% endif %}
</header>
{% endif %}